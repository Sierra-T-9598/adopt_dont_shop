<h2>Please add: Why do you think you would be a good owner?</h2>
  <%= form_with url: "/applications/#{@application.id}", method: :patch, local: true do |f| %>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, required: true %>
    <br>
    <%= f.submit 'Submit your application' %>
  <% end %>
